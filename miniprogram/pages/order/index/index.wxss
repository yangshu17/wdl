.top{
    width: 100vw;
    height: 200rpx;
    display: flex;
    align-items: center;
}

.top-left{
    width: 160rpx;
    height: 160rpx;
    margin-left: 24px;
    background: #666;
    border-radius: 80rpx;
}
.top-right{
    margin-left: 24px;
    font-size: 42rpx;
    color: #444;
}
.top-right1 {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 12px;
    font-size: 28rpx;
    color: #444;
    padding-right: 24rpx;
}

.top-right1-button {
    width: 160rpx;
    height: 60rpx;
    border-radius: 30rpx;
    background: rgb(31, 156, 156);
    color: #fff;
    line-height: 60rpx;
    text-align: center;
}

.tab {
    margin-top: 24rpx;
    display: flex;
    justify-content: space-around;
}
.list{
    margin-top: 40rpx;
    width: 260rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    background: #ddd;
    text-align: center;
    border-radius: 40rpx;
    color: #666;
}

.list-choose {
    background: rgb(66, 207, 207);
    color: #fff;
}

.tip {
    font-size: 48rpx;
    color: #333;
    margin-top: 24rpx;
    margin-left: 24rpx;
}

.serv {
    display: flex;
    flex-wrap: wrap;
}

.serv-list {
    margin-left: 24rpx;
    margin-right: 12rpx;
    margin-top: 24rpx;
    width: 200rpx;
    height: 200rpx;
    background: #ddd;
    border-radius: 100rpx;
    text-align: center;
    line-height: 200rpx;
    font-size: 36rpx;
    color: #333;
}

.serv-list-choose {
    background: coral;
    color: #fff;
}

.bottom {
    height: 100rpx;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 130rpx;
    background: rgb(66, 207, 207);
    border-radius: 50rpx;
    text-align: center;
    line-height: 130rpx;
    font-size: 42rpx;
    color: #fff;
}