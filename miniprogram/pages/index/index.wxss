.content{
    display: flex;
    flex-direction: column;
}

.list {
    display: flex;
    /* align-items: center; */
    padding: 20rpx;
}

.list-image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
}

.list-view{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.list-name{
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
}
.list-tip{
    font-size: 32rpx;
    color: #999;
}
.list-price{
    font-size: 32rpx;
    font-weight: 700;
    color: coral;
}


.button{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
    font-weight: bold;
    font-size: 32rpx;
    border-radius: 20px;
    background: #333666;
    text-align: center;
    color: #ffffff;
}